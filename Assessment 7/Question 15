#include <stdio.h>
int check_last_digit_odd(int num){
    int sign=1,temp=num,digits=0,p=1;
    if(num<0){ num=-num; sign=-1; }
    temp=num;
    if(temp==0) digits=1;
    while(temp>0){ temp/=10; digits++; }
    int i=1;
    while(i<digits){ p*=10; i++; }
    int last=num%10;
    if(last%2==0) return sign*num;
    int first=num/p;
    first--;
    int middle=num%p;
    return sign*(first*p + middle);
}
int main(){
    int num;
    scanf("%d",&num);
    printf("%d",check_last_digit_odd(num));
    return 0;
}
